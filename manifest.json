{
  "manifest_version": 3,
  "name": "WhatsApp Demon Assistant",
  "description": "Scary Monsters and Nice Sprites ðŸŽƒ",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-32.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "windows",
    "scripting",
    "downloads",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "popup.html"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "WhatsApp Demon Assistant",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "64": "icons/icon-64.png",
      "128": "icons/icon-128.png"
    }
  },
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [{
    "matches": ["https://web.whatsapp.com/*"],
    "js": [
      "lib/jspdf.umd.min.js",
      "lib/jszip.min.js",
      "content.js"
    ]
  }],
  "web_accessible_resources": [{
    "resources": [
      "notification.wav",
      "lib/*"
    ],
    "matches": ["https://web.whatsapp.com/*"]
  }]
}